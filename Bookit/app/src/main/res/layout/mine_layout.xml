<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@color/light_black"
                android:id="@+id/mine_personal"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/logo"
                    android:id="@+id/mine_head_picture"
                    android:layout_alignParentBottom="true"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#666" />

                <View
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentBottom="true"
                    android:background="#000"
                    android:alpha="0.0"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/mine_head_picture">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tab_checked"
                        android:textSize="17sp"
                        android:text="Crazy丶轩Sir"
                        android:id="@+id/mine_cur_name"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#aa7748"
                        android:text="LV 2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#929292"
                        android:layout_marginTop="5dp"
                        android:text="闲人一个"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/next"
                    android:id="@+id/mine_next"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#fff"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/mine_message_record"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>

                <View
                    android:layout_width="2dp"
                    android:layout_height="60dp"
                    android:background="#dcdcdc"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/mine_seat"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>

                <View
                    android:layout_width="2dp"
                    android:layout_height="60dp"
                    android:background="#dcdcdc"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/mine_rank"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:id="@+id/mine_line_chart"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/time"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#000"
                        android:text="每日学习时间"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="#000"
                        android:text="(近7天)"
                        android:textSize="12sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/line_chart"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="10dp"
                android:id="@+id/mine_ir_record_container">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/setting"
                    android:id="@+id/mine_ir_record"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/mine_ir_record"
                    android:textSize="18sp"
                    android:paddingTop="8dp"
                    android:text="违规记录"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingBottom="12.5dp"
                    android:paddingTop="12.5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/next_p"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="10dp"
                android:id="@+id/mine_setting_container">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/setting"
                    android:id="@+id/mine_setting"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingTop="8dp"
                    android:layout_toRightOf="@id/mine_setting"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:text="设置"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingTop="12.5dp"
                    android:paddingBottom="12.5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/next_p"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </LinearLayout>

</ScrollView>