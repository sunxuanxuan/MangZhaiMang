<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/bookit" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="475dp"
        android:background="@drawable/background_w"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="260dp"
        android:padding="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="选择位置偏好标签" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:text="（最多三个）"
            android:textColor="#000"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="@dimen/tags_layout_width"
                android:layout_height="@dimen/tags_layout_height"
                android:textSize="@dimen/tags_font_size"
                android:textColor="#999"
                android:background="@drawable/tag_bg_unchecked"
                android:text="靠近书架"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:id="@+id/tags_1"/>

            <TextView
                android:layout_width="@dimen/tags_layout_width"
                android:layout_height="@dimen/tags_layout_height"
                android:textSize="@dimen/tags_font_size"
                android:textColor="#999"
                android:background="@drawable/tag_bg_unchecked"
                android:text="靠近电源"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tags_1"
                android:gravity="center"
                android:id="@+id/tags_2"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="@dimen/tags_layout_width"
                android:layout_height="@dimen/tags_layout_height"
                android:textSize="@dimen/tags_font_size"
                android:textColor="#999"
                android:background="@drawable/tag_bg_unchecked"
                android:text="靠近服务台"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:id="@+id/tags_3"/>

            <TextView
                android:layout_width="@dimen/tags_layout_width"
                android:layout_height="@dimen/tags_layout_height"
                android:textSize="@dimen/tags_font_size"
                android:textColor="#999"
                android:background="@drawable/tag_bg_unchecked"
                android:text="靠近茶水间"
                android:layout_toLeftOf="@id/tags_3"
                android:layout_marginRight="20dp"
                android:id="@+id/tags_4"
                android:gravity="center"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="@dimen/tags_layout_width"
                android:layout_height="@dimen/tags_layout_height"
                android:textSize="@dimen/tags_font_size"
                android:textColor="#999"
                android:background="@drawable/tag_bg_unchecked"
                android:text="靠窗"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:id="@+id/tags_5"/>

            <TextView
                android:layout_width="@dimen/tags_layout_width"
                android:layout_height="@dimen/tags_layout_height"
                android:textSize="@dimen/tags_font_size"
                android:textColor="#999"
                android:background="@drawable/tag_bg_unchecked"
                android:text="远离走廊"
                android:layout_toRightOf="@id/tags_5"
                android:layout_marginLeft="20dp"
                android:id="@+id/tags_6"
                android:gravity="center"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="@dimen/tags_layout_width"
                android:layout_height="@dimen/tags_layout_height"
                android:textSize="@dimen/tags_font_size"
                android:textColor="#999"
                android:background="@drawable/tag_bg_unchecked"
                android:text="远离空调口"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:id="@+id/tags_7"/>

            <TextView
                android:layout_width="@dimen/tags_layout_width"
                android:layout_height="@dimen/tags_layout_height"
                android:textSize="@dimen/tags_font_size"
                android:textColor="#999"
                android:background="@drawable/tag_bg_unchecked"
                android:text="靠近门口"
                android:layout_toLeftOf="@id/tags_7"
                android:layout_marginRight="20dp"
                android:id="@+id/tags_8"
                android:gravity="center"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:src="@drawable/bt_next"
            android:layout_gravity="center_horizontal"
            android:id="@+id/prefer_next"/>

    </LinearLayout>

</RelativeLayout>
</ScrollView>

